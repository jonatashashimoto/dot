{
    "global": { "show_in_menu_bar": false },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Swap control/command in Terminal",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$",
                                            "^com\\.apple\\.Terminal$",
                                            "^net\\.kovidgoyal\\.kitty$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "left_command" },
                                "to": [{ "key_code": "left_control" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$",
                                            "^com\\.apple\\.Terminal$",
                                            "^net\\.kovidgoyal\\.kitty$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "left_control" },
                                "to": [{ "key_code": "left_command" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Launch Alacritty on right_control",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": { "key_code": "right_control" },
                                "to": [{ "shell_command": "open ~/alacritty/target/release/osx/Alacritty.app" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "right_control" },
                                "to": [{ "shell_command": "osascript -e 'tell application \"Finder\"' -e 'set visible of process \"alacritty\" to false' -e 'end tell' " }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Launch Alacritty on right_option",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$"
                                        ],
                                        "type": "frontmost_application_unless"
                                    }
                                ],
                                "from": { "key_code": "right_option" },
                                "to": [{ "shell_command": "open ~/alacritty/target/release/osx/Alacritty.app" }],
                                "type": "basic"
                            },
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^io\\.alacritty$",
                                            "^org\\.alacritty$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "right_option" },
                                "to": [{ "shell_command": "osascript -e 'tell application \"Finder\"' -e 'set visible of process \"alacritty\" to false' -e 'end tell' " }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 591,
                        "vendor_id": 1452
                    },
                    "treat_as_built_in_keyboard": true
                }
            ],
            "fn_function_keys": [
                {
                    "from": { "key_code": "f3" },
                    "to": [{ "key_code": "mission_control" }]
                },
                {
                    "from": { "key_code": "f4" },
                    "to": [{ "key_code": "launchpad" }]
                },
                {
                    "from": { "key_code": "f5" },
                    "to": [{ "key_code": "illumination_decrement" }]
                },
                {
                    "from": { "key_code": "f6" },
                    "to": [{ "key_code": "illumination_increment" }]
                }
            ],
            "name": "Default profile",
            "selected": true,
            "simple_modifications": [
                {
                    "from": { "key_code": "caps_lock" },
                    "to": [{ "key_code": "escape" }]
                }
            ],
            "virtual_hid_keyboard": {
                "country_code": 0,
                "keyboard_type_v2": "ansi"
            }
        }
    ]
}