  {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 9,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
    },
    "globals": {
      "dredd": "writable",
      "requireApp": "readonly"
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off",
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
